pipeline {
    agent any
    Tools{
        NodeJS 'Node'
    }
    stages {
        stage('Clone Repository') {
            steps {
                bat 'git clone https://github.com/DEEP-666/Test01.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }
        stage('Run Tests') {
            steps {
                bat 'npm test || echo "No tests defined"'
            }
        }
        stage('Build Application') {
            steps {
                bat 'npm run build'
            }
        }
    }
}
